# Maintainer: Jacques Figuinha <appt.jf@outlook.fr>
pkgname=regardsviewer-bin
pkgver=2.50.0
pkgrel=1
pkgdesc="Regards is a modern photo viewer. (official precompiled binary)"
arch=('x86_64')
url="https://github.com/jfiguinha/Regards"
license=('GPL')
provides=()
options=()
depends=('libexif' 'gtk3' 'webkit2gtk' 'freeglut' 'mesa' 'libjpeg-turbo' 'sdl2' 'glew' 'openexr' 'curl' 'expat' 'libva' 'sane' 'ocl-icd' 'openjpeg2' 'fftw' 'leptonica' 'libwebp' 'intel-tbb' 'bzip2' 'mesa-vdpau' 'sndio')
optdepends=()
conflicts=('RegardsViewer')
source=("https://github.com/jfiguinha/Regards/releases/download/v2.49/RegardsViewer_arch_linux_2_49.tar.xz")
sha256sums=('46f415e638178ef77bdc39cf15cb769f622f60715e62f40f799fb075f4368209')

package() {
  # Recursively remove group's write permission before moving to package directory
  mkdir ${pkgdir}/usr
  mkdir ${pkgdir}/usr/bin
   mv ${srcdir}/RegardsViewer ${pkgdir}/usr/bin
}
