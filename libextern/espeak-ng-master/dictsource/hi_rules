// Consonants

.group क
        क          kV
        क (B       k
        क (्य      k:
        क़         qV
        क़ (B      q

        क्क         k:V   // kk -> k:
        क्क (B      k:
        क्ष          kSV
        क्ष (B       kS
        
.group ख
        ख          k#V
        ख (B       k#
        ख़         xV
        ख़ (B      x

.group ग
        ग          gV
        ग (B       g
        ग़         QV
        ग़ (B      Q
//new
        ग्ग         g:V   // GG -> g:
        ग्ग (B      g:

.group घ
        घ          g#V
        घ (B       g#

.group ङ
        ङ          NV
        ङ (B       N
     ्) ङ (_       N@

.group च
        च          cV
        च (B       c
        च (्य      c:

//New
        च्च          c:V   // cc -> c:
        च्च (B       c:

//new
        च्छ          c#:V    // c#c# -> c#:
        च्छ (B       c#:
      

.group छ
        छ          c#V
        छ (B       c#

.group ज
        ज          JV
        ज (B       J
