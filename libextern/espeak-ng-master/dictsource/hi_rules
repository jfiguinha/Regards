     ्) ञ (_       n^@


.group ट
        ट          t.V
        ट (B       t.
        ट (्य      t.:

        ट्ट          t.:V    // t.t. -> t.:
        ट्ट (B       t.:

        ट्ठ          t.#:V    // t.t.# -> t.#:
        ट्ठ (B       t.#:

.group ठ
        ठ          t.#V
        ठ (B       t.#
        
        ठ्ठ          t.#:V   // t.#t.# -> t.#:
        ठ्ठ (B       t.#:
        
.group ड
        ड          d.V
        ड (B       d.

        ड्ड          d.:V   // d. d. -> d.:
        ड्ड (B      d.:

        ड्ढ          d.#:V    // d#d# -> d#:
        ड्ढ (B       d.#:


        ड़         r.V
        ड़ (B      r.

.group ढ
