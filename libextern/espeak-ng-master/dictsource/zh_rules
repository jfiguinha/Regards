       we1i	wei55
       we2i	wei35
       we3i	wei214
       we4i	wei51
       we	wu@ //wen weng
       wo	wo
       wu	wu

.group x
       x        S;
    @) x (K	_^_EN

.group y
       y	j //before a o e i
       y (u	//NULL before u
       y (uK	;
       y (uDn   ;
       yo (DngK	yu
       y (K     i    // foreign words
    @) y (K	_^_EN

.group z
       z        ts
       zh (+    ts.
    @) z (K	_^_EN

