.group ü
       ü	y
       üe	yE

.group v //variant of ü
       v	v // foreign words
    l) v        y //ü
    n) v        y //ü
    l) ve	yE //üe
    n) ve	yE //üe

.group w
    @) w (K	_^_EN
       wa	wA  //wa wan wang
       wai	wai
